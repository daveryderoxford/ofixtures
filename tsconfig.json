{
  "compileOnSave": true,
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "d3",
      "stripe-v3",
      "stripe-checkout"
    ]
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
  }
}