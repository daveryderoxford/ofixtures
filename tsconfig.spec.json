{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "baseUrl": ".",
    "types": [
      "jasmine",
      "node",
      "jasmine-expect"
    ]
  },
  "files": [
    "./src/test.ts",
    "./src/polyfills.ts"
  ],
  "include": [
    "./src/**/*.spec.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "./src/**/*.node.ts"
  ]
}

